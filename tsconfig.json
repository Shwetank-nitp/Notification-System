{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dest",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dest"]
}
